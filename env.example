# Copy to .env and fill in. Do not commit .env.
# Windows: copy env.example .env

# Database (must match docker-compose)
DATABASE_URL=postgresql+asyncpg://postgres:secret@localhost:5432/smartlensdb
MONGODB_URL=mongodb://localhost:27017
REDIS_URL=redis://localhost:6379

# Auth — use a long random string in production
JWT_SECRET=your-secret-at-least-32-chars-long-change-in-prod

# Optional for Step 0–1; needed for Day 4 (AI)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
GEMINI_API_VERSION=v1alpha

# App (optional)
APP_NAME=SmartLens AI

# CORS: comma-separated origins, or * for all (Step 5)
CORS_ORIGINS=*

# Rate limit per IP (Step 6): max requests per window
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
